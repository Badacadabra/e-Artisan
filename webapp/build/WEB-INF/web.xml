<?xml version="1.0" encoding="UTF-8"?>
<web-app
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
			http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
    id="WebApp_ID"
    version="3.0">

<!-- Servlets  -->
    
  <!-- JSP -->
	<servlet>
        <servlet-name>IndexServlet</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>NewsFeedServlet</servlet-name>
        <jsp-file>/views/actus.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <jsp-file>/views/admin.jsp</jsp-file>
    </servlet>

  <!-- Classes -->
	<servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>servlets.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProfilServlet</servlet-name>
        <servlet-class>servlets.ProfilServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>servlets.RegisterUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModifyProfileServlet</servlet-name>
        <servlet-class>servlets.ModifyProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddServiceServlet</servlet-name>
        <servlet-class>servlets.AddServiceServlet</servlet-class>
    </servlet>
	<servlet>
        <servlet-name>NeedServlet</servlet-name>
        <servlet-class>servlets.NeedServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OffersServlet</servlet-name>
        <servlet-class>servlets.OfferServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CyclesServlet</servlet-name>
        <servlet-class>servlets.CyclesServlet</servlet-class>
    </servlet>

<!-- Servlets mappings -->
   
  <!-- JSP -->
	<servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/e-artisan</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/accueil</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewsFeedServlet</servlet-name>
        <url-pattern>/actus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    
  <!-- Classes -->
	 <servlet-mapping>
        <servlet-name>NeedServlet</servlet-name>
        <url-pattern>/besoins</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
        <servlet-name>ProfilServlet</servlet-name>
        <url-pattern>/profil</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModifyProfileServlet</servlet-name>
        <url-pattern>/modifProfil</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddServiceServlet</servlet-name>
        <url-pattern>/ajoutService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OffersServlet</servlet-name>
        <url-pattern>/offres</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
        <servlet-name>CyclesServlet</servlet-name>
        <url-pattern>/cycles</url-pattern>
    </servlet-mapping>

<!-- OLD -->
    
    <servlet>
        <servlet-name>SignupForm</servlet-name>
        <jsp-file>/views/signup.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignupForm</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginForm</servlet-name>
        <jsp-file>/views/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginForm</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


<!-- Environment variables -->
    
    <env-entry>
        <env-entry-name>host</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>localhost</env-entry-value>
    </env-entry>
    <env-entry>
      <env-entry-name>database</env-entry-name>
      <env-entry-type>java.lang.String</env-entry-type>
      <env-entry-value>e_artisan</env-entry-value>
    </env-entry>
    <env-entry>
      <env-entry-name>username</env-entry-name>
      <env-entry-type>java.lang.String</env-entry-type>
      <env-entry-value>root</env-entry-value>
    </env-entry>
    <env-entry>
      <env-entry-name>password</env-entry-name>
      <env-entry-type>java.lang.String</env-entry-type>
      <env-entry-value>black</env-entry-value>
    </env-entry>
    <env-entry>
      <env-entry-name>users</env-entry-name>
      <env-entry-type>java.lang.String</env-entry-type>
      <env-entry-value>users</env-entry-value>
    </env-entry>
    <env-entry>
      <env-entry-name>services</env-entry-name>
      <env-entry-type>java.lang.String</env-entry-type>
      <env-entry-value>services</env-entry-value>
    </env-entry>


</web-app> 
